{
    "name": "bitsandlikes-shopware/app-lifecycle-bundle",
    "version": "1.0.0",
    "description": "Symfony bundle to process app lifecycle events",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "bits & likes GmbH (Florian Kasper)",
            "homepage": "https://bitsandlikes.de"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "BAL\\AppLifecycleBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BAL\\AppLifecycleBundle\\Test\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "symfony/framework-bundle": "^5.3",
        "symfony/routing": "^5.3",
        "symfony/event-dispatcher": "^5.1|^6.0",
        "symfony/yaml": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "bamarni/composer-bin-plugin": "^1.4",
        "symfony/phpunit-bridge": "^5.3"
    },
    "scripts": {
        "bin": "echo 'bin not installed'",
        "post-install-cmd": [
            "@composer bin all install --ansi"
        ],
        "post-update-cmd": [
            "@composer bin all update --ansi"
        ],
        "ecs-dry": "ecs check src/ tests/ --config ecs.php",
        "ecs-fix": "@ecs-dry --fix",
        "psalm": "psalm",
        "static-analysis": [
            "@psalm",
            "@ecs-dry"
        ],
        "test-cov": "php -d pcov.enabled=1 -d pcov.directory=./src ./vendor/bin/phpunit --configuration phpunit.xml.dist",
        "test-coverage": "@test-cov --coverage-clover build/artifacts/phpunit.clover.xml --coverage-html build/artifacts/phpunit-coverage-html",
        "test-coverage-cobertura": "@test-cov --configuration phpunit.xml.dist --coverage-cobertura build/artifacts/cobertura-coverage.xml",
        "test": "phpunit --configuration phpunit.xml.dist"
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    }
}
